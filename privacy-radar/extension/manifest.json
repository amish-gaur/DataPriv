{
  "manifest_version": 3,
  "name": "Student Privacy Radar",
  "version": "0.1.0",
  "description": "Summarizes any site's Privacy Policy & Terms with a risk score.",
  "action": { "default_popup": "popup.html", "default_title": "Privacy Radar" },
  "permissions": ["activeTab", "scripting", "storage"],
  "host_permissions": ["http://*/*", "https://*/*"],
  "background": { "service_worker": "background.js" },
  "icons": { "16": "icons/icon16.png", "48": "icons/icon48.png", "128": "icons/icon128.png" }
}
